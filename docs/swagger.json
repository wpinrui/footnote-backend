{
    "swagger": "2.0",
    "info": {
        "description": "API for managing footnotes",
        "title": "Footnote API",
        "contact": {},
        "version": "1.0"
    },
    "basePath": "/",
    "paths": {
        "/footnote": {
            "post": {
                "description": "Adds a footnote for the authenticated user",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "footnote"
                ],
                "parameters": [
                    {
                        "description": "Footnote content and day",
                        "name": "request",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/handlers.CreateFootnoteRequest"
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Created",
                        "schema": {
                            "$ref": "#/definitions/handlers.CreateFootnoteResponse"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "handlers.CreateFootnoteRequest": {
            "type": "object",
            "properties": {
                "content": {
                    "type": "string"
                },
                "day": {
                    "type": "string"
                }
            }
        },
        "handlers.CreateFootnoteResponse": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "integer",
                    "example": 123
                }
            }
        }
    }
}